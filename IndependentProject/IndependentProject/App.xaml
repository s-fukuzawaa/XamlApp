<Application
    x:Class="IndependentProject.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IndependentProject"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="Brush" Color="LightGray" />
            <Style TargetType="TextBlock" x:Key="MyFont">
                <Setter Property="FontFamily" Value="Garamond"/>
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="FontSize" Value="16" />

            </Style>
            <Style TargetType="Button" x:Key="MyButtonStyle">
                <Setter Property="Background" Value="LightGray"/>
                <Setter Property="IsHoldingEnabled" Value="True" />
                <Setter Property="IsTextScaleFactorEnabled" Value="True"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
