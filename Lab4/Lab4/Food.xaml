<Page
    x:Class="Lab4.Food"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lab4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" >
            <Button Name="Button" FontFamily="Segoe MDL2 Assets" Content="&#xE72B;" FontSize="36" Click="Button_Click" />
            <TextBlock Name="Foodtext"  Text=" Food " FontFamily="Arial" FontWeight="Bold" FontSize="28" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

            <TextBox Width="300" Grid.Row="0"  FontFamily="Segoe MDL2 Assets" Text="Search" FontSize="24" SelectionHighlightColor="LightGray"/>
            <Button Name="Search" FontFamily="Segoe MDL2 Assets" Content="&#xE71E;" FontSize="36" Grid.Row="0"  HorizontalAlignment="Right"/>
        </StackPanel>


        <Image Source="Assets/Food.png" Grid.Row="1" Stretch="Fill"></Image>
        <Frame Name="back" Grid.RowSpan="2"/>

    </Grid>
</Page>
